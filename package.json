    "test:e2e": "playwright test"
  },
  "prettier": "@jill64/prettier-config",
  "devDependencies": {
    "@jill64/attempt": "1.1.1",
    "@jill64/eslint-config-ts": "1.1.3",
    "@jill64/playwright-config": "2.2.3",
    "@jill64/prettier-config": "1.0.0",
    "@jill64/unfurl": "2.0.4",
    "@playwright/test": "1.41.2",
    "eslint": "8.56.0",
    "octoflare": "0.24.11",
    "prettier": "3.2.5",
    "typescanner": "0.5.3",
    "typescript": "5.3.3",
    "vitest": "1.3.1"
  }
